{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-dvh flex-col gap-4">
        <div class="w-[40dvw]">

            {% if error %}
                <div class="bg-red-100 border border-red-400 text-red-700 rounded p-3 w-full">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="block border">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}
        </div>

        <form method="post">
            <div class="border rounded bg-white w-[40dvw]">

                <img src="{{ asset('images/illustation.jpeg') }}" alt="" class="rounded-t max-h-[150px] w-[100%] object-cover">

                <div class="p-5">
                    <h3 class="mb-3 font-bold text-center">Connexion</h3>
                    <div class="mt-3">
                        <label for="username" class="block font-semibold mb-2">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
                               autocomplete="email" required autofocus>
                    </div>

                    <div class="mt-3">
                        <label for="password" class="block font-semibold mb-2">Password</label>
                        <input type="password" name="_password" id="password" class="form-control"
                               autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <button class="btn-primary block mx-auto mt-4" type="submit">
                        Connexion
                    </button>
                </div>

            </div>

        </form>
    </div>
{% endblock %}
