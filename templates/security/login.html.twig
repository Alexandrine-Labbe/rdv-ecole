{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-dvh flex-col gap-4">
        <div class="w-[40dvw]">

            {% if error %}
                <div class="bg-red-100 border border-red-400 text-red-700 rounded p-3 w-full">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="block border">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}
        </div>

        <form method="post">

            <div class="card bg-base-100 w-96 shadow-lg">
                <figure>
                    <img
                            src="{{ asset('images/illustation.jpeg') }}"
                            alt="Teacher"/>
                </figure>
                <div class="card-body items-center text-center">
                    <h2 class="card-title">Connexion</h2>

                    <div class="mt-3">
                        <label for="username" class="block font-semibold mb-2 text-start">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username"
                               class="input input-bordered w-full max-w"
                               autocomplete="email" required autofocus>
                    </div>

                    <div class="mt-3">
                        <label for="password" class="block font-semibold mb-2 text-start">Password</label>
                        <input type="password" name="_password" id="password" class="input input-bordered w-full max-w"
                               autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <button class="btn btn-primary mx-auto " type="submit">
                        Connexion
                    </button>
                </div>
            </div>

        </form>
    </div>
{% endblock %}
